set $mod Mod4

font pango:monospace 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# apps _ZXC

bindsym XF86AudioMute        exec "pamixer -t"
bindsym XF86AudioLowerVolume exec "pamixer -d 3 -u"
bindsym XF86AudioRaiseVolume exec "pamixer -i 3 -u"
bindsym XF86AudioMicMute     exec "pamixer --source alsa_input.pci-0000_00_1f.3.analog-stereo -t"

bindsym $mod+underscore exec xterm
bindsym $mod+Shift+underscore exec "emacsclient -cn"

bindsym $mod+z exec "i3lock -c ff0000"
bindsym $mod+x exec "dmenu_run -fn monospace-8"
bindsym $mod+Shift+c kill

bindsym $mod+Shift+z exec "i3-nagbar -t warning -m 'Exit?' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+x restart
bindsym $mod+c reload

# windows ARST QWFP

bindsym $mod+a focus left
bindsym $mod+r focus down
bindsym $mod+s focus up
bindsym $mod+t focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+a move left
bindsym $mod+Shift+r move down
bindsym $mod+Shift+s move up
bindsym $mod+Shift+t move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+q focus child
bindsym $mod+w focus parent
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+f floating toggle
bindsym $mod+p split toggle
bindsym $mod+Shift+p mode "resize"

mode "resize" {
        bindsym a resize shrink width 10 px or 10 ppt
        bindsym s resize grow height 10 px or 10 ppt
        bindsym r resize shrink height 10 px or 10 ppt
        bindsym t resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Up resize grow height 10 px or 10 ppt
        bindsym Down resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# layouts

bindsym $mod+space layout toggle split
bindsym $mod+Shift+space layout toggle stacked tabbed

# workspaces 12345

bindsym $mod+1 workspace 1: dev
bindsym $mod+2 workspace 2: doc
bindsym $mod+3 workspace 3: net
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5

bindsym $mod+Shift+1 move container to workspace 1: dev
bindsym $mod+Shift+2 move container to workspace 2: doc
bindsym $mod+Shift+3 move container to workspace 3: net
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5

for_window [class="qpdfview"] border pixel 0
for_window [class="Google-chrome"] border pixel 0

assign [class="qpdfview"] 2: doc
assign [class="calibre"] 2: doc
assign [class="libreoffice"] 2: doc
assign [class="GoldenDict"] 2: doc

assign [class="Google-chrome"] 3: net
assign [class="Telegram"] 3: net
assign [class="Skype"] 3: net

assign [class="Spotify"] 4
for_window [class="Spotify"] move to workspace 4

exec goldendict

exec --no-startup-id i3-msg "workspace 3: net; append_layout /home/viv/.config/i3/workspace-net.json; exec /home/viv/bin/chrome; exec telegram-desktop; exec skypeforlinux"

# outputs <>

bindsym $mod+less focus output left
bindsym $mod+greater focus output right
bindsym $mod+Shift+less move container to output left
bindsym $mod+Shift+greater move container to output right

# bar

bar {
    position top
    tray_output none
    status_command i3status-rs /home/viv/.config/i3/status-rs.toml
    colors {
        separator #666666
        background #222222
        statusline #dddddd
        focused_workspace #0088CC #0088CC #ffffff
        active_workspace #333333 #333333 #ffffff
        inactive_workspace #333333 #333333 #888888
        urgent_workspace #2f343a #900000 #ffffff
    }
}
