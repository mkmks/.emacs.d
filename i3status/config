general {
	output_format = i3bar
        colors = true
        interval = 10
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "time"

wireless _first_ {
        format_up = "W: %essid %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "B: %status %percentage %remaining"
}

time {
        format = "%a %b %d %R"
}
